<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Volcanic Region</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://cdn.socket.io/3.1.3/socket.io.min.js" integrity="sha384-cPwlPLvBTa3sKAgddT6krw0cJat7egBga3DJepJyrLl4Q9/5WLra3rrnMcyTyOnh" crossorigin="anonymous"></script>
</head>

<body>
    <input type="text" class="message">
    <button onclick="send()">Send</button>
    <h1></h1>
    <br>
    <br>
    <div id="volcanic_region_map"></div>

    <p id="loading" style="display: none;">Please wait, loading Scene ...</p>

    <script>
        const socket = io('http://localhost:8000')
        socket.on('connection')

        socket.on('message', (data) => {
            document.querySelector('h1').innerHTML = data
        })
        const send = () => {
            const message = document.querySelector('.message').value
            socket.emit('message' , message)
        }
    </script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/phaser@3.55.2/dist/phaser.min.js"></script>
    <script type="text/javascript" src="/assets/VolcanicRegionMapDemo.js"></script>
    

</body>

</html>